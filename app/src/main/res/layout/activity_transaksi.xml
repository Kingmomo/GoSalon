<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/white"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            app:statusBarScrim="@android:color/white"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/background_transaksi"
                app:layout_collapseMode="parallax" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_gradient"
                android:fitsSystemWindows="true"
                android:rotation="180" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:contentInsetStartWithNavigation="0dp"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </FrameLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <CheckBox
                android:id="@+id/combobox"
                style="@style/Combobox"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Pakai Data Lama"/>


            <EditText
                android:id="@+id/nama"
                style="@style/LoginSignUp5Input"
                android:hint="Nama" />


            <EditText
                android:id="@+id/alamat"
                style="@style/LoginSignUp6Input"
                android:hint="Alamat"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/notelp"
                style="@style/LoginSignUp5Input"
                android:hint="No Telp" />

            <EditText
                android:id="@+id/koordinat"
                style="@style/LoginSignUp5Input"
                android:hint="Koordinat" />

            <EditText
                android:id="@+id/date"
                style="@style/LoginSignUp5Input"
                android:hint="Tanggal Order" />

            <EditText
                android:id="@+id/clock"
                style="@style/LoginSignUp5Input"
                android:hint="Jam Order" />

            <EditText
                android:id="@+id/paket"
                style="@style/LoginSignUp5Input"
                android:hint="Paket"
              />

            <EditText
                android:id="@+id/harga"
                style="@style/LoginSignUp5Input"
                android:hint="Harga"
                />

            <Button
                android:id="@+id/btntransaksi"
                style="@style/ButtonOrange"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="30dp"
                android:onClick="onClick"
                android:text="Konfirmasi Order"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_large" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



</android.support.design.widget.CoordinatorLayout>