<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_small"
        app:cardCornerRadius="@dimen/spacing_medium"
        app:cardElevation="@dimen/spacing_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingRight="@dimen/spacing_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/solid_button"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/namatoko"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing_medium"
                    android:paddingTop="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/spacing_medium"
                    android:paddingBottom="@dimen/spacing_small"
                    android:text="Pesona BDL" />

                <TextView
                    android:id="@+id/sort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing_medium"
                    android:paddingTop="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/spacing_medium"
                    android:paddingBottom="@dimen/spacing_small"
                    android:text="Pesanan Ke - 1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/people"
                    android:drawablePadding="@dimen/spacing_medium"
                    android:fontFamily="@font/roboto"
                    android:text="Budi Setinto"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/notelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="@dimen/spacing_medium"
                    android:fontFamily="@font/roboto"
                    android:text="0812345678"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/calendar"
                    android:drawablePadding="@dimen/spacing_medium"
                    android:fontFamily="@font/roboto"
                    android:text="19-08-2019"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/waktu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/time"
                    android:drawablePadding="@dimen/spacing_medium"
                    android:fontFamily="@font/roboto"
                    android:text="16:40"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/status"
                android:drawablePadding="@dimen/spacing_medium"
                android:fontFamily="@font/roboto"
                android:text="Belum Di Konfirmasi"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_konfirmasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/solid_button"
                android:padding="4dp"
                android:text="Konfirmasi Selesai"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>